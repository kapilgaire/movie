<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/movie_cover_art_iv_movie_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="covert art"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/cover"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/content_bg">

            <TextView
                android:id="@+id/movie_rating_tv_movie_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rating_label_bg"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="16dp"
                android:fontFamily="@string/font_family_black"
                android:padding="8dp"
                android:text="9.9"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/movie_year_tv_movie_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_medium"
                android:text="2018"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/movie_name_tv_movie_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_medium"
                android:text="Avenger Infinity war"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/movie_genre_tv_movie_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_medium"
                android:text="Action , Sci-fi"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/movie_summary_tv_movie_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxLines="4"
                android:text="Lorem, Ipsum, Lorem, Ipsum Lorem, Ipsum Lorem, Ipsum Lorem, Ipsum Lorem, IpsumLorem, IpsumLorem, IpsumLorem, IpsumLorem, IpsumLorem, IpsumLorem, IpsumLorem, IpsumLorem, IpsumLorem,Lorem, Ipsum"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
